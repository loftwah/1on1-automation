{
  "name": "1on1-automation",
  "version": "1.0.0",
  "description": "AI-Enhanced One-on-One Meeting Assistant",
  "scripts": {
    "build-css": "sass frontend/scss:frontend/css && tailwindcss -i frontend/css/tailwind.css -o frontend/css/styles.css",
    "copy-htmx": "cp node_modules/htmx.org/dist/htmx.min.js frontend/js/",
    "watch-css": "sass -w frontend/scss:frontend/css && tailwindcss -i frontend/css/tailwind.css -o frontend/css/styles.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loftwah/1on1-automation.git"
  },
  "author": "Dean Lofts",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "htmx.org": "^1.9.8",
    "postcss": "^8.0.0",
    "sass": "^1.58.1",
    "tailwindcss": "^3.0.0"
  },
  "dependencies": {
    "@amcharts/amcharts5": "^5.5.7",
    "@fortawesome/fontawesome-free": "^6.4.2",
    "tom-select": "^2.3.1"
  }
}
